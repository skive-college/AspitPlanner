<Window x:Class="AspitPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspitPlanner"
        mc:Ignorable="d"
        Title="Aspit Planner" Height="490" Width="800" ResizeMode="CanMinimize">
    <DockPanel >
        <Menu x:Name="MainMenu"  Height="25" DockPanel.Dock="Top" Background="LightGreen">
            
        </Menu>
        <StatusBar Height="25" DockPanel.Dock="Bottom" Background="LightGreen">
            <StatusBarItem>
                <TextBox Margin="0"  Name="lblStatus" Background="Transparent"
                 BorderThickness="0"
                 IsReadOnly="True"
                 TextWrapping="Wrap" /> 
            </StatusBarItem>
        </StatusBar>
        <Grid x:Name="MainContent"/>
    </DockPanel>
</Window>
