<Window x:Class="AspitPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspitPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="800" ResizeMode="NoResize">
    <DockPanel>
        <Menu Height="25" DockPanel.Dock="Top">
            <MenuItem Header="Menu" Height="25">
                <MenuItem Header="Registrere" Click="RegGUI_Click"/>
                <MenuItem Header="Elev administration" Click="StudentAdmin_Click"/>
                <MenuItem Header="Type administration" Click="TypeAdmin_Click"/>
                <MenuItem Header="Aftaler administration" Click="Appointment_Click"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Name="lblStatus" />
            </StatusBarItem>
        </StatusBar>
        <Grid x:Name="MainContent"/>
    </DockPanel>
</Window>
