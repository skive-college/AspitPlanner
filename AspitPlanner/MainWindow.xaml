<Window x:Class="AspitPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspitPlanner"
        mc:Ignorable="d"
        Title="Aspit Planner" Height="470" Width="800" ResizeMode="NoResize">
    <DockPanel>
        <Menu x:Name="MainMenu" Height="25" DockPanel.Dock="Top" Background="LightGreen">
            
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Background="LightGreen">
            <StatusBarItem>
                <TextBlock Name="lblStatus" />
            </StatusBarItem>
        </StatusBar>
        <Grid x:Name="MainContent"/>
    </DockPanel>
</Window>
