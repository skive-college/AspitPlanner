<Window x:Class="AspitPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspitPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="365"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Menu Height="25" Grid.Row="0">
            <MenuItem Header="Menu">
                <MenuItem Header="registrer"/>
                <MenuItem Header="Elev Administration"/>
                <MenuItem Header="Type Administration"/>
            </MenuItem>
        </Menu>
        <StackPanel x:Name="MainContent" Grid.Row="1"/>
        <Label x:Name="lblStatus" Grid.Row="2" Content="Status"/>
    </Grid>
</Window>
