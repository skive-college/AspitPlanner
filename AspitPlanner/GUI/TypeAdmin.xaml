<UserControl x:Class="AspitPlanner.GUI.TypeAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AspitPlanner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Left Panel -->
        <StackPanel Style="{StaticResource StackPanel}" Grid.Column="0">
            <TextBlock Text="Kategori"/>
            <ComboBox x:Name="CbType" ItemsSource="{Binding}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding CategoryName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="Ny type navn"/>
            <TextBox x:Name="txtNavn"/>
            <Button x:Name="CmdOpretType" Content="Opret type" Style="{StaticResource standartButton}" HorizontalAlignment="Right" Click="CmdOpretType_Click"/>
        </StackPanel>
        <!-- right Panel -->
        <StackPanel Style="{StaticResource StackPanel}" Grid.Column="1">
            <TextBlock Text="Ny kategori navn"/>
            <TextBox x:Name="txtKatNavn"/>
            <Button x:Name="CmdOpretKategori" Content="Opret kategori" Style="{StaticResource standartButton}" HorizontalAlignment="Right" Click="CmdOpretKategori_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
