<UserControl x:Class="AspitPlanner.GUI.StudentAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AspitPlanner.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Elever"/>
            <ListView x:Name="lwStudent" Height="300"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left">
            <Label Content="Navn"/>
            <TextBox x:Name="txtName" Width="200"/>
            <Label Content="Hold"/>
            <ComboBox x:Name="cbTeam" Width="200" SelectionChanged="CbTeam_SelectionChanged"/>
            <Label Content="Nyt hold"/>
            <TextBox x:Name="txtNewTeam" Width="200"/>
            <Button x:Name="create" Content="Opret" Width="100" Margin="100 10 0 0" Click="cmbCreate_Click"/>
        </StackPanel>
            
    </Grid>
</UserControl>
